<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.edtEvaluacion" parent="AppTheme">
        <item name="android:drawableTint">@color/colorNegro</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColorHint">@color/colorNegro</item>
        <item name="android:textColor">@color/colorNegro</item>
        <item name="backgroundTint">@color/colorNegro</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.btnEvaluacion" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.titulosEvaluacion" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.txtChicosEvaluacion" parent="AppTheme">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>